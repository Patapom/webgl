////////////////////////////////////////////////////////////////
// Common uniforms
uniform vec4	_Color;

////////////////////////////////////////////////////////////////
// Vertex Shader
#ifdef VS

attribute vec3	_vPosition;

uniform vec3	_LightDirection;
uniform mat4	_World2Proj;

void	main()
{
	gl_Position = _World2Proj * vec4( 2.0 * _LightDirection * _vPosition, 1 );
}

